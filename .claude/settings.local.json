{
  "permissions": {
    "allow": [
      "WebSearch",
      "WebFetch(domain:www.anthropic.com)",
      "mcp__serena__list_dir",
      "Bash(npm run lint:*)",
      "Bash(npm run typecheck:*)",
      "Bash(npm run deps:*)",
      "Bash(npm run unused:*)",
      "Bash(npm run quality:*)",
      "Bash(npm run format:*)",
      "mcp__context7__resolve-library-id",
      "mcp__context7__get-library-docs",
      "Bash(claude update)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "enabledMcpjsonServers": [
    "serena"
  ],
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "npm run lint --silent -- --max-warnings 0 2>/dev/null || echo '[Lint] Warnings detected'"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node .specify/scripts/state.js query --all 2>/dev/null || echo \"[SSD State] Not initialized\""
          }
        ]
      }
    ]
  }
}
